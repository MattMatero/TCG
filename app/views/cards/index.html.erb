<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
      <th>Price</th>
      <th>Set</th>
      <th>color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.id %></td>
        <td><%= card.price %></td>
        <td><%= card.set %></td>
        <td><%= card.color %></td>
      </tr>
    <% end %>
  </tbody>
</table>