<div id="Profile Header">
<% if @user.username[-1,1].downcase != 's' %>
	<h1><%="#{@user.username}'s "%>Profile</h1>
<% else %>
	<h1><%="#{@user.username}' "%>Profile</h1>
<% end %>
</div>

<span id="profile img">
	<!-- if user doesn't have picture use default  -->
	<% if @user.image.nil?%>
		<%= image_tag "profile2.png" %>
	<% else %>
		<%= image_tag "#{@user.image}" %>
	<% end %>
</span>
<% if @user.username == current_user.username %>
	<div id="button">
		<%= link_to 'Change Picture', home_photopicker_path %>
	</div>
<% end %> 
<div id="decks">
	<ol>
		<li>Deck 1</li>
		<li>Deck 2</li>
		<li>Deck 3</li>
	</ol>
</div>



